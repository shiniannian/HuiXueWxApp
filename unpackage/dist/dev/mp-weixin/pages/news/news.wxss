  height: 52rpx;
}
.main {
  padding: 70rpx 32rpx 0;
}
.news {
  width: 100%;
}
.news .news_item {
  height: 96rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F1F1F1;
}
.news .news_item .news_item_l {
  position: relative;
  float: left;
}
.news .news_item .news_item_l image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}
.news .news_item .news_item_l .tip {
  position: absolute;
  z-index: 100;
  top: -6rpx;
  left: 68rpx;
  min-width: 36rpx;
  height: 36rpx;
  background: #ff5d5b;
  border-radius: 18rpx;
  line-height: 36rpx;
  text-align: center;
  color: white;
}
.news .news_item .news_item_r {
  padding-left: 128rpx;
}
.news .news_item .news_item_r .upper {
  height: 50rpx;
}
.news .news_item .news_item_r .upper .name {
  float: left;
  font-size: 28rpx;
  font-weight: 400;
  font-weight: 540;
  line-height: 50rpx;
}
.news .news_item .news_item_r .upper .time {
  float: right;
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.6);
  line-height: 50rpx;
}
.news .news_item .person {
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.6);
  line-height: 40rpx;
}

