.top-bar {
  position: fixed;
  z-index: 1001;
  top: 0;
  left: 0;
  width: 100%;
  height: 70rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  background-color: white;
  -webkit-box-shadow: 0rpx 1rpx 0rpx 0rpx rgba(0, 0, 0, 0.1);
          box-shadow: 0rpx 1rpx 0rpx 0rpx rgba(0, 0, 0, 0.1);
  padding-left: 32rpx;
  padding-right: 32rpx;
}
.top-bar .top-bar-left {
  float: left;
  margin-top: 10rpx;
  margin: 10rpx;
  font-weight: 540;
  width: auto;
}
.top-bar .top-bar-left .top-title {
  color: #ff5d5b;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.top-bar .top-bar-right {
  float: right;
}
.top-bar .top-bar-right .search {
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.top-bar .top-bar-right .add {
  width: 30rpx;
  height: 30rpx;
